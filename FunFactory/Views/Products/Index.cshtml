@model List<WebApp.Domain.Component>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>...</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@Html.Raw(p.Name)</td>
            <td>&pound;@p.Price</td>
            <td>@p.StockQty</td>
            <td>@Html.ActionLink("View", "Details", new { p.Id }, new { @class = "btn btn-xs btn-primary" })</td>
        </tr>
    }
</table>